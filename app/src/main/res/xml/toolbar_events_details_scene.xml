<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="0"/>

        <Constraint
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            motion:layout_constraintBottom_toBottomOf="@id/back_arrow"
            motion:layout_constraintTop_toTopOf="@id/back_arrow"
            motion:layout_constraintStart_toEndOf="@id/back_arrow" />
        <Constraint
            android:id="@+id/event_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            motion:layout_constraintBottom_toBottomOf="@id/back_arrow"
            motion:layout_constraintTop_toTopOf="@id/back_arrow"
            motion:layout_constraintStart_toEndOf="@id/event_name" />
    </ConstraintSet>
</MotionScene>