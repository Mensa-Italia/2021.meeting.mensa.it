<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/closed_to_middle"
        motion:constraintSetEnd="@+id/fab_middle"
        motion:constraintSetStart="@id/fab_closed"
        motion:duration="350">
        <KeyFrameSet>
            <KeyPosition
                motion:framePosition="50"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@id/user_fab"
                motion:percentX="0.85"
                motion:percentY="0.15" />
            <KeyPosition
                motion:framePosition="50"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@id/user_image"
                motion:percentX="0.85"
                motion:percentY="0.15" />
        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/middle_to_open"
        motion:constraintSetEnd="@+id/fab_open"
        motion:constraintSetStart="@+id/fab_middle"
        motion:duration="550">
        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="80"
                motion:motionTarget="@id/user_fab">
                <CustomAttribute
                    motion:attributeName="radius"
                    motion:customDimension="160dp" />
            </KeyAttribute>
            <KeyPosition
                motion:framePosition="80"
                motion:motionTarget="@id/user_fab"
                motion:percentHeight="1"
                motion:percentWidth="1" />
            <KeyPosition
                motion:framePosition="80"
                motion:motionTarget="@id/user_image"
                motion:percentHeight="1"
                motion:percentWidth="1" />
        </KeyFrameSet>
    </Transition>


    <ConstraintSet android:id="@+id/fab_closed">

        <Constraint android:id="@id/user_fab">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                motion:layout_constraintBottom_toBottomOf="@id/placeholder"
                motion:layout_constraintDimensionRatio="1:1"
                motion:layout_constraintEnd_toEndOf="@id/placeholder"
                motion:layout_constraintTop_toTopOf="@id/placeholder" />

            <CustomAttribute
                motion:attributeName="radius"
                motion:customDimension="@dimen/fab_radius" />

            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="@dimen/fab_elevation" />
        </Constraint>

        <Constraint android:id="@id/user_image">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_account_circle"
                motion:layout_constraintBottom_toBottomOf="@id/user_fab"
                motion:layout_constraintEnd_toEndOf="@id/user_fab"
                motion:layout_constraintStart_toStartOf="@id/user_fab"
                motion:layout_constraintTop_toTopOf="@id/user_fab" />
        </Constraint>

        <Constraint android:id="@id/close_user">
            <Layout
                android:layout_width="@dimen/fab_size"
                android:layout_height="0dp"
                motion:layout_constraintBottom_toBottomOf="@id/placeholder"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="@id/placeholder" />

            <PropertySet android:visibility="invisible" />
        </Constraint>


    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/fab_middle"
        motion:deriveConstraintsFrom="@id/fab_closed">


        <Constraint android:id="@id/user_fab">
            <Layout
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                motion:layout_constraintEnd_toEndOf="@id/user_sheet_placeholder"
                motion:layout_constraintStart_toStartOf="@id/user_sheet_placeholder"
                motion:layout_constraintTop_toTopOf="@id/user_sheet_placeholder" />

            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="@dimen/fab_elevation_2" />
        </Constraint>
    </ConstraintSet>

    <!-- apri utente -->
    <ConstraintSet
        android:id="@+id/fab_open"
        motion:deriveConstraintsFrom="@id/fab_middle">
        <Constraint android:id="@id/user_image">
            <Layout
                android:layout_width="@dimen/fab_double_size"
                android:layout_height="@dimen/fab_double_size"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_account_circle"
                motion:layout_constraintEnd_toEndOf="@id/user_fab"
                motion:layout_constraintStart_toStartOf="@id/user_fab"
                motion:layout_constraintTop_toTopOf="@id/user_fab" />
        </Constraint>

        <Constraint android:id="@id/user_fab">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                motion:layout_constraintBottom_toBottomOf="@id/user_sheet_placeholder"
                motion:layout_constraintEnd_toEndOf="@id/user_sheet_placeholder"
                motion:layout_constraintStart_toStartOf="@id/user_sheet_placeholder"
                motion:layout_constraintTop_toTopOf="@id/user_sheet_placeholder" />

            <CustomAttribute
                motion:attributeName="radius"
                motion:customDimension="0dp" />
        </Constraint>

        <Constraint android:id="@id/close_user">
            <Layout
                android:layout_width="@dimen/fab_size"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                motion:layout_constraintBottom_toBottomOf="@id/placeholder"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintTop_toTopOf="@id/placeholder" />
            <PropertySet android:visibility="visible" />
        </Constraint>
    </ConstraintSet>
</MotionScene>