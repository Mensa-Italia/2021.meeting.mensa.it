<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/activity_end"
        motion:constraintSetStart="@id/activity_start"
        motion:duration="850">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="60"
                motion:motionTarget="@+id/activity_description" />

            <KeyPosition
                motion:framePosition="1"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@id/activity_description"
                motion:percentX="0"
                motion:percentY="0" />

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="60"
                motion:motionTarget="@+id/activity_date" />

            <KeyPosition
                motion:framePosition="1"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@id/activity_date"
                motion:percentX="0"
                motion:percentY="0" />

            <KeyAttribute
                android:alpha="1"
                motion:framePosition="20"
                motion:motionTarget="@+id/activity_direction_button" />

            <KeyAttribute
                motion:framePosition="60"
                motion:motionTarget="activity_direction_button">
                <CustomAttribute
                    motion:attributeName="colorFilter"
                    motion:customColorValue="@color/primary_color" />
            </KeyAttribute>

            <KeyAttribute
                motion:framePosition="60"
                motion:motionTarget="activity_detail_button">
                <CustomAttribute
                    motion:attributeName="colorFilter"
                    motion:customColorValue="@color/primary_color" />
            </KeyAttribute>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/activity_start">

        <Constraint
            android:id="@+id/activity_detail_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="@id/activity_name"
            motion:layout_constraintStart_toStartOf="@id/activity_name"
            motion:layout_constraintTop_toBottomOf="@id/activity_name">
            <CustomAttribute
                motion:attributeName="colorFilter"
                motion:customColorValue="?attr/colorPrimary" />
        </Constraint>

        <Constraint
            android:id="@+id/activity_direction_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="@id/activity_detail_button"
            motion:layout_constraintEnd_toEndOf="@id/activity_detail_button"
            motion:layout_constraintStart_toStartOf="@id/activity_detail_button"
            motion:layout_constraintTop_toTopOf="@id/activity_detail_button">
            <CustomAttribute
                motion:attributeName="colorFilter"
                motion:customColorValue="?attr/colorPrimary" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/activity_end">
        <Constraint
            android:id="@+id/activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            motion:layout_constraintStart_toStartOf="@id/activity_date"
            motion:layout_constraintTop_toTopOf="@id/activity_background" />
        <Constraint
            android:id="@+id/activity_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:alpha="1"
            motion:layout_constraintBottom_toTopOf="@id/activity_day"
            motion:layout_constraintEnd_toEndOf="@id/activity_background"
            motion:layout_constraintStart_toStartOf="@id/activity_background"
            motion:layout_constraintTop_toBottomOf="@id/activity_name" />
        <Constraint
            android:id="@+id/activity_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:alpha="1"
            motion:layout_constraintBottom_toTopOf="@id/activity_detail_button"
            motion:layout_constraintEnd_toEndOf="@id/activity_date"
            motion:layout_constraintStart_toStartOf="@id/activity_date"
            motion:layout_constraintTop_toBottomOf="@id/activity_date" />

        <Constraint
            android:id="@+id/activity_detail_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:alpha="1"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="@id/activity_background"
            motion:layout_constraintEnd_toEndOf="@id/activity_background"
            motion:layout_constraintStart_toEndOf="@id/activity_direction_button"
            motion:layout_constraintTop_toBottomOf="@+id/activity_description">
            <CustomAttribute
                motion:attributeName="colorFilter"
                motion:customColorValue="@color/white" />
        </Constraint>
        <Constraint
            android:id="@+id/activity_direction_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:alpha="1"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="@id/activity_background"
            motion:layout_constraintEnd_toStartOf="@id/activity_detail_button"
            motion:layout_constraintStart_toStartOf="@id/activity_background"
            motion:layout_constraintTop_toBottomOf="@+id/activity_description" >
            <CustomAttribute
                motion:attributeName="colorFilter"
                motion:customColorValue="@color/white" />
        </Constraint>
        <Constraint
            android:id="@+id/background_icons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="1"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="@id/activity_background"
            motion:layout_constraintEnd_toEndOf="@id/activity_background"
            motion:layout_constraintStart_toStartOf="@id/activity_background"
            motion:layout_constraintTop_toBottomOf="@id/activity_description" />

    </ConstraintSet>
</MotionScene>