<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_home_scene">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment_activity_home"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/nav_graph" />

    <View
        android:id="@+id/placeholder"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/user_sheet_placeholder"
        android:layout_width="0dp"
        android:layout_height="400dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <swaix.dev.mensaeventi.utils.CircleCardView
        android:id="@+id/user_fab"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        app:cardCornerRadius="@dimen/fab_radius"
        app:cardBackgroundColor="?attr/colorPrimaryDark"
        app:cardElevation="@dimen/fab_elevation" />

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="34dp"
        android:src="@drawable/ic_account_circle"
        app:layout_constraintBottom_toBottomOf="@id/user_fab"
        app:layout_constraintEnd_toEndOf="@id/user_fab"
        app:layout_constraintStart_toStartOf="@id/user_fab"
        app:layout_constraintTop_toTopOf="@id/user_fab" />

    <ImageView
        android:id="@+id/close_user"
        android:layout_width="@dimen/fab_size"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:elevation="34dp"
        android:outlineProvider="none"
        android:scaleType="centerInside"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_close"
        app:tint="#FFF" />
</androidx.constraintlayout.motion.widget.MotionLayout>