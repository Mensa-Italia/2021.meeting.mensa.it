<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.map.MapFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/googleMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/title_box"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_activity_timeline"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="@id/back_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="16dp"
        android:padding="16dp"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/title_box"
        app:layout_constraintTop_toTopOf="@id/title_box"
        app:tint="?attr/colorOnBackground" />

    <TextView
        android:id="@+id/map_toolbar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        android:text="Titolo"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:textColor="@color/primary_color"
        style="@style/LatoBold.24"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="@id/title_box"
        app:layout_constraintEnd_toEndOf="@id/title_box"
        app:layout_constraintStart_toStartOf="@id/title_box"
        app:layout_constraintTop_toTopOf="@id/title_box" />

    <View
        android:id="@+id/sharing_people_box"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_activity_timeline"
        android:elevation="16dp"
        app:layout_constraintStart_toStartOf="@id/share_position_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_box"/>

    <ImageView
        android:id="@+id/share_position_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/share_icon"
        android:elevation="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/sharing_people_box"
        app:layout_constraintBottom_toBottomOf="@id/sharing_people_box"
        app:layout_constraintEnd_toEndOf="@id/sharing_people_box"/>

    <TextView
        android:id="@+id/share_position_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_share_position"
        android:textColor="@color/share_icon_color"
        android:elevation="16dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="16dp"
        app:layout_constraintTop_toTopOf="@id/sharing_people_box"
        app:layout_constraintBottom_toBottomOf="@id/sharing_people_box"
        app:layout_constraintEnd_toStartOf="@id/share_position_icon"/>

    <View
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:background="?attr/colorSecondary"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/share_position_people"
        style="@style/amu_ClusterIcon.TextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="17dp"
        android:layout_margin="8dp"
        android:drawablePadding="4dp"
        tools:text="prova"
        app:layout_constraintBottom_toBottomOf="@id/footer"
        app:layout_constraintEnd_toEndOf="@id/footer"
        app:layout_constraintTop_toTopOf="@id/footer"
        app:drawableStartCompat="@drawable/ic_account_eye" />

</androidx.constraintlayout.widget.ConstraintLayout>