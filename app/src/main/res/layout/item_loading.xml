<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/placeholder1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_gradient_alpha_rounded"
        app:layout_constraintDimensionRatio="7:3" />
    <View
        android:id="@+id/placeholder2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_gradient_alpha_rounded"
        app:layout_constraintDimensionRatio="7:3" />
    <View
        android:id="@+id/placeholder3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_gradient_alpha_rounded"
        app:layout_constraintDimensionRatio="7:3" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/placeholder_flow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:constraint_referenced_ids="placeholder1,placeholder2,placeholder3"
        app:flow_maxElementsWrap="3"
        app:flow_verticalGap="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:flow_verticalStyle="spread"
        app:flow_wrapMode="chain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>