<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="date_style" parent="TextAppearance.AppCompat.Small">
        <item name="android:hyphenationFrequency">normal</item>
    </style>
    <style name="date_style.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title" />
    <style name="title.bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="title.bold.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text" parent="TextAppearance.AppCompat.Body2" />
    <style name="text.bold" >
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.bold.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="caption" parent="TextAppearance.MaterialComponents.Button"/>
    <style name="small" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item>
    </style>


</resources>