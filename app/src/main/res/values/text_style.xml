<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="date_style" parent="TextAppearance.AppCompat.Small">
        <item name="android:hyphenationFrequency">normal</item>
    </style>
    <style name="date_style.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title" />
    <style name="title.bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="title.bold.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text" parent="TextAppearance.AppCompat.Body2" />
    <style name="text.bold" >
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.bold.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="caption" parent="TextAppearance.MaterialComponents.Button"/>
    <style name="small" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item>
    </style>


    <!--Textsize-->
    <style name="LatoRegular">
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="LatoRegular.10">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="LatoRegular.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LatoRegular.24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="LatoBold">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="LatoBold.10">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="LatoBold.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LatoBold.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LatoBold.24">
        <item name="android:textSize">24sp</item>
    </style>


</resources>